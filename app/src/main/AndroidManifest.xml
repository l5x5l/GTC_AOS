<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softsquared.gridge_test.android.instagram_challenge"
    tools:ignore="LockedOrientationActivity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:name=".base_component.GlobalApplication"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstagramChallenge"
        tools:targetApi="31">
        <activity
            android:name=".page.start.StartActivity"
            android:exported="true"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".page.login.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.base.SignUpActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.id.SignUpIdActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.auth_code.SignUpAuthCodeActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.name.SignUpNameActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.password.SignUpPasswordActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.birthday.SignUpBirthdayActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.terms.SignUpTermsActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
        <activity android:name=".page.sign_up.user_name.SignUpUserNameActivity" android:taskAffinity="com.insta_challenge_sign_up"
            android:screenOrientation="portrait"/>
       <activity android:name=".page.sign_up.confirmation.SignUpConfirmationActivity" android:taskAffinity="com.insta_challenge_sign_up"
           android:screenOrientation="portrait"/>
    </application>

</manifest>